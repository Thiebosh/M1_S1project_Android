<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_channel_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".recyclers.BackupConfigAdapter">

    <TextView
        android:id="@+id/item_channel_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_chan_disp_padding_left"
        android:layout_marginLeft="@dimen/item_chan_disp_padding_left"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/frag_main_channel_id"
        android:textSize="@dimen/item_chan_disp_text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_channel_text_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textSize="@dimen/item_chan_disp_text"
        app:layout_constraintBottom_toBottomOf="@+id/item_channel_text_current"
        app:layout_constraintEnd_toStartOf="@+id/item_channel_text_current"
        app:layout_constraintTop_toTopOf="@+id/item_channel_text_current" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lesserThan"
        android:textSize="@dimen/item_chan_disp_text"
        app:layout_constraintBottom_toBottomOf="@+id/item_channel_text_current"
        app:layout_constraintEnd_toStartOf="@+id/item_channel_text_current"
        app:layout_constraintStart_toEndOf="@+id/item_channel_text_min"
        app:layout_constraintTop_toTopOf="@+id/item_channel_text_current" />

    <TextView
        android:id="@+id/item_channel_text_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="@dimen/item_chan_disp_text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_channel_text_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_channel_text_id"
        app:layout_constraintTop_toTopOf="@+id/item_channel_text_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lesserThan"
        android:textSize="@dimen/item_chan_disp_text"
        app:layout_constraintBottom_toBottomOf="@+id/item_channel_text_current"
        app:layout_constraintEnd_toStartOf="@+id/item_channel_text_max"
        app:layout_constraintStart_toEndOf="@+id/item_channel_text_current"
        app:layout_constraintTop_toTopOf="@+id/item_channel_text_current" />

    <TextView
        android:id="@+id/item_channel_text_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="@dimen/item_chan_disp_text"
        app:layout_constraintBottom_toBottomOf="@+id/item_channel_text_current"
        app:layout_constraintStart_toEndOf="@+id/item_channel_text_current"
        app:layout_constraintTop_toTopOf="@+id/item_channel_text_current" />

</androidx.constraintlayout.widget.ConstraintLayout>