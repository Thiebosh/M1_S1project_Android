<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_channel_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.MainBoardFragment">

    <Button
        android:id="@+id/activation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/value" />


    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="25dp"
        android:ems="3"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scaleSpinner"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/scaleSpinner"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:entries="@array/scale_arrays"
        android:gravity="start"
        android:background="@android:color/transparent"
        android:popupBackground="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/value"
        app:layout_constraintEnd_toStartOf="@+id/typeSpinner"
        app:layout_constraintTop_toTopOf="@+id/value" />

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:entries="@array/type_arrays"
        android:gravity="start"
        android:background="@android:color/transparent"
        android:popupBackground="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/scaleSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scaleSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>